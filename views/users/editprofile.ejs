<body>
    <div class="bg">
        <a href="/users/protected" style="margin-left: 20px; margin-top: 50px;">ย้อนกลับ</a>
        <h1 style="padding-top: 25px; text-align: center;">แก้ไขข้อมูล</h1>
        <div class="container" style="margin-left: 32%;">
            <div class="row my-3">
                <div class="col-md-8 mb-4">
                    <form class="form-horizontal" method="POST" action="/users/userupdate">
                        <input type="hidden" value="<%= userdata._id%>" name="update_id">
                        <div class="form-group">
                            <div>
                                <label class="control-label">ชื่อ</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="ufname" value="<%= userdata.ufname%>">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">นามสกุล</label>
                                <div class="col-sm-10">
                                    <input type="text" name="ulname" value="<%= userdata.ulname%>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="control-label">คณะ</label>
                                    <div class="col-sm-10">
                                        <select name="ufaculty" id="" class="form-control">
                                            <% Object.values(rec.sfaculty).forEach(function(item){%>
                                                <option value="<%= item%>">
                                                    <%= item%>
                                                </option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label">สาขา</label>
                                        <div class="col-sm-10">
                                            <select name="ubranch" id="" class="form-control">
                                                <% Object.values(rec.sbranch).forEach(function(item){%>
                                                    <option value="<%= item%>">
                                                        <%= item%>
                                                    </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">เกรด</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="ugpa" value="<%= userdata.ugpa%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">ระดับการศึกษา</label>
                                    <div class="col-sm-10">
                                        <select name="uclass" id="" class="form-control">
                                            <option value="มัธยม">มัธยม</option>
                                            <option value="ปริญญาตรี">ปริญญาตรี</option>
                                            <option value="ปริญญาโท">ปริญญาโท</option>
                                            <option value="ปริญญาเอก">ปริญญาเอก</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">เบอร์มือถือ</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="phonenumber"
                                            value="<%= userdata.phonenumber%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">คะแนน TOEIC</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" name="utoeic"
                                            value="<%= userdata.utoeic%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">คะแนน IELTS</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" name="uielts"
                                            value="<%= userdata.uielts%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">คะแนน TOEFL</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" name="utoefl"
                                            value="<%= userdata.utoefl%>">
                                    </div>
                                </div>
                                <!-- <div class="form-group">
                                    <label class="control-label">ทุนที่สนใจ</label>
                                    <div class="col-sm-10">
                                        <select name="ustype" id="stype" multiple class="form-control">
                                            <% for (i=0;i< scholarshipstype.length;i++) {%>
                                                <option value="<%= scholarshipstype[i]%>">
                                                    <%= scholarshipstype[i]%>
                                                </option>
                                                <%} %>
                                        </select>
                                    </div>
                                </div> -->
                                <div class=" col-sm-10">
                                    <button>
                                        <input type="submit" value="แก้ไขข้อมูล" class="btn btn-primary">
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <script type="text/javascript">
        new MultiSelectTag('stype')
        function myFunction() {
            let text;
            let newstype = prompt("ระบุประเภททุนใหม่");
            if (newstype == null || newstype == "") {
                text = "ไม่ได้ระบุ";
            } else {
                text = "เพิ่ม " + newstype + " สำเร็จ";
            }
            document.getElementById("newstype").innerHTML = text;
        }
    </script>
</body>

</html>